<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:scrollbars="horizontal|vertical" >

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:useDefaultMargins="true" >

        <TextView
            android:layout_gravity="left|top"
            android:text="Album"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/issue_album_name_value"
            android:layout_gravity="left|top"
            android:text="&lt;AlbumName>"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="Image"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/issue_album_entry_name_value"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="&lt;AlbumEntry>"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="Issue Type"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/issue_type_value"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:text="Issue Time"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/issue_time_value"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="4"
            android:text="Stacktrace"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/issue_stacktrace_value"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="4"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </GridLayout>

</ScrollView>